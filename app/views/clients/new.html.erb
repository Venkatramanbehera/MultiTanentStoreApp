<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Launch a New Store</h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      This will provision a new database schema and admin user.
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      
      <%= form_with(model: @client, local: true, class: "space-y-6") do |f| %>
        
        <% if @client.errors.any? %>
          <div class="bg-red-50 p-4 rounded text-red-700 text-sm">
            <%= @client.errors.full_messages.to_sentence %>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Store Name", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "e.g. Nike Official" %>
          </div>
        </div>

        <div>
          <%= f.label :subdomain, "Subdomain", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex rounded-md shadow-sm">
            <%= f.text_field :subdomain, class: "flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-l-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "nike" %>
            <span class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">
              .lvh.me
            </span>
          </div>
          <p class="mt-2 text-xs text-gray-500">Only lowercase letters and numbers.</p>
        </div>

        <div>
          <%= f.submit "Create Store", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
        </div>

        <div class="text-center">
          <%= link_to "Cancel", platform_root_path, class: "text-sm text-gray-500 hover:text-gray-900" %>
        </div>

      <% end %>
    </div>
  </div>
</div>