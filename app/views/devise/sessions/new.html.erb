<% if request.subdomain.blank? || request.subdomain == 'www' %>
  
  <div class="fixed inset-0 z-[9999] flex min-h-screen bg-slate-900 font-sans antialiased text-white">
    
    <div class="hidden lg:flex lg:w-1/2 relative bg-slate-800 overflow-hidden items-center justify-center border-r border-slate-700">
       
       <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10"></div>
       <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-indigo-500/30 rounded-full blur-3xl animate-pulse"></div>
       <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl"></div>

       <div class="relative z-10 p-12 max-w-lg">
         <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-2xl shadow-indigo-500/20 mb-8">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
         </div>
         <h1 class="text-5xl font-extrabold tracking-tight leading-tight mb-6">
           Master Control <br> <span class="text-indigo-400">Panel.</span>
         </h1>
         <p class="text-lg text-slate-400 leading-relaxed mb-8">
           Monitor tenant databases, manage subscriptions, and oversee the entire SaaS infrastructure from one secure location.
         </p>
         
         <div class="flex items-center gap-4 text-xs font-mono text-slate-500 border-t border-slate-700/50 pt-6">
            <div class="flex items-center">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
              System Operational
            </div>
            <div>v2.4.0-stable</div>
         </div>
       </div>
    </div>

    <div class="w-full lg:w-1/2 flex flex-col justify-center px-8 lg:px-24 bg-slate-900">
      
      <div class="w-full max-w-md mx-auto">
        <div class="mb-10">
          <h2 class="text-3xl font-bold tracking-tight text-white">Admin Authentication</h2>
          <p class="mt-2 text-sm text-slate-400">Enter your master credentials to continue.</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { class: "space-y-6" }) do |f| %>
          
          <div>
            <%= f.label :email, class: "block text-xs uppercase tracking-wider font-semibold text-slate-500 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              </div>
              <%= f.email_field :email, autofocus: true, class: "block w-full pl-10 bg-slate-800/50 border border-slate-700 rounded-lg py-3 text-white placeholder-slate-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-slate-800 transition sm:text-sm", placeholder: "admin@platform.com" %>
            </div>
          </div>

          <div>
            <%= f.label :password, class: "block text-xs uppercase tracking-wider font-semibold text-slate-500 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", class: "block w-full pl-10 bg-slate-800/50 border border-slate-700 rounded-lg py-3 text-white placeholder-slate-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-slate-800 transition sm:text-sm", placeholder: "••••••••" %>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-500 focus:ring-indigo-500 border-slate-700 bg-slate-800 rounded cursor-pointer" %>
                <%= f.label :remember_me, class: "ml-2 block text-sm text-slate-400 cursor-pointer" %>
              </div>
            <% end %>
            <div class="text-sm">
              <a href="#" class="font-medium text-indigo-400 hover:text-indigo-300">Forgot password?</a>
            </div>
          </div>

          <div class="pt-2">
            <%= f.submit "Access Dashboard", class: "w-full flex justify-center py-3.5 px-4 border border-transparent rounded-lg shadow-lg shadow-indigo-500/20 text-sm font-bold text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all cursor-pointer" %>
          </div>
        <% end %>
        
        <p class="mt-8 text-center text-xs text-slate-600">
          Unathorized access is prohibited and logged. IP: <%= request.remote_ip %>
        </p>
      </div>
    </div>
  </div>


<% else %>

  <div class="fixed inset-0 z-[9999] flex min-h-screen bg-white font-sans antialiased overflow-y-auto">
    
    <div class="hidden lg:flex lg:w-1/2 relative bg-gray-900 overflow-hidden">
      <img src="https://images.unsplash.com/photo-1492496913980-501348b61469?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80" class="absolute inset-0 w-full h-full object-cover opacity-60" alt="Background">
      
      <div class="relative z-10 w-full flex flex-col justify-between p-16 text-white">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-[#B5F194] flex items-center justify-center text-green-900 font-bold shadow-lg">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          </div>
          <span class="text-3xl font-bold tracking-tight"><%= current_tenant&.name || "Store" %></span>
        </div>

        <div>
          <h2 class="text-5xl font-extrabold leading-tight mb-6">
            Welcome to <br> <%= current_tenant&.name || "our Store" %>
          </h2>
          <div class="h-1 w-20 bg-[#B5F194] rounded mb-6"></div>
          <p class="text-gray-200 text-xl max-w-md leading-relaxed">
            Manage your orders, products, and customers from one beautiful dashboard.
          </p>
        </div>
        
        <div class="flex gap-6 text-sm text-gray-400 font-medium">
          <a href="#" class="hover:text-white transition">Terms of Service</a>
          <a href="#" class="hover:text-white transition">Privacy Policy</a>
        </div>
      </div>
    </div>

    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-12 relative">
       <img src="https://images.unsplash.com/photo-1492496913980-501348b61469?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80" class="absolute inset-0 w-full h-full object-cover opacity-5 lg:hidden pointer-events-none" alt="">

      <div class="w-full max-w-md space-y-8 relative z-10">
        
        <div class="lg:hidden flex items-center gap-2 mb-8 justify-center">
          <div class="w-10 h-10 rounded-full bg-green-500 flex items-center justify-center text-white font-bold">P</div>
        </div>

        <div class="text-center lg:text-left">
          <h2 class="text-3xl font-extrabold text-gray-900">Store Login</h2>
          <p class="mt-2 text-sm text-gray-500">
            Please enter your staff details to continue.
          </p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { class: "mt-8 space-y-6" }) do |f| %>
          
          <div class="space-y-5">
            <div>
              <%= f.label :email, class: "block text-sm font-bold text-gray-700 mb-1" %>
              <%= f.email_field :email, autofocus: true, class: "block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 transition bg-gray-50 focus:bg-white shadow-sm", placeholder: "staff@store.com" %>
            </div>

            <div>
              <div class="flex justify-between">
                <%= f.label :password, class: "block text-sm font-bold text-gray-700 mb-1" %>
                <a href="#" class="text-sm text-green-600 hover:text-green-500 font-semibold">Forgot?</a>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 transition bg-gray-50 focus:bg-white shadow-sm", placeholder: "••••••••" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded cursor-pointer" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-600 cursor-pointer" %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Sign in to Store", class: "w-full flex justify-center py-3.5 px-4 border border-transparent rounded-xl shadow-lg shadow-green-200 text-sm font-bold text-white bg-green-900 hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition cursor-pointer transform hover:-translate-y-0.5" %>
          </div>

        <% end %>
        
        <p class="text-center text-xs text-gray-400 mt-8">
          Powered by Multi-Tenant Platform
        </p>

      </div>
    </div>
  </div>

<% end %>